<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JBA.MainPage">

    <StackLayout>
        <Frame Padding="0" CornerRadius="0">
            <Image Source="greenhouse_update.jpg" Aspect="AspectFill"/>
        </Frame>
        <Entry x:Name="Username" Placeholder="Username"/>
        <Entry x:Name="Password" Placeholder="Password" IsPassword="True"/>
        <Button Text="Login" 
                TextColor="White"
                BackgroundColor="Blue"
                Clicked="OnLoginClicked"/>
    </StackLayout>

</ContentPage>
